.pages {
    padding: 30rpx;
    background-color: #fff;
    width: 100%;
    box-sizing: border-box;
}

.scenic-title {
    display: flex;
    align-items: center;
}

.scenic-title-name {
    font-size: 40rpx;
    font-family: SourceHanSansCN-Bold;
    font-weight: bold;
    color: rgba(58,58,58,1);
    line-height: 46rpx;
    max-width: 50%;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.scenic-title-offLab {
    border: 1px solid rgba(255,79,50,1);
    border-radius: 4rpx;
    height: 27rpx;
    font-size: 22rpx;
    font-family: SourceHanSansCN-Regular;
    font-weight: 400;
    color: rgba(255,79,50,1);
    line-height: 27rpx;
    margin-left: 11rpx;
    padding: 3rpx 6rpx;
}

.scenic-ab {
    display: flex;
    align-items: center;
    padding: 20rpx 0 0rpx;
}

.scenic-lab view {
    display: inline-block;
    height: 30rpx;
    background: rgba(51,153,255,0.1);
    border-radius: 2rpx;
    padding: 5rpx 15rpx;
    font-size: 20rpx;
    font-family: SourceHanSansCN-Normal;
    font-weight: 400;
    color: rgba(51,153,255,1);
    line-height: 30rpx;
    margin-right: 14rpx;
    margin-top: 21rpx;
}

.scenic-detaile {
    padding-top: 24rpx;
}

.scenic-detaile>view {
    display: flex;
    align-items: flex-start;
    padding-bottom: 18rpx;
    font-size: 24rpx;
    font-family: SourceHanSansCN-Regular;
    font-weight: 400;
    color: rgba(102,102,102,1);
}

.scenic-detaile-tit {
    margin-right: 15rpx;
}

.scenic-detaile-conter {
    width: 80%;
}

.scenic-introduction {
    margin-top: 10rpx;
    font-size: 28rpx;
    font-family: SourceHanSansCN-Normal;
    font-weight: 400;
    color: rgba(51,51,51,1);
    line-height: 48rpx;
    letter-spacing: 2rpx;
}

.scenic-imgs {
    margin-top: 30rpx;
}

.scenic-imgs image {
    width: 100%;
}