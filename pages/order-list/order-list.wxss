.pay-title {
    width: 100%;
    display: flex;
    height: 64rpx;
    line-height: 64rpx;
    justify-content: center;
    border-bottom: 1rpx solid #EEEEEE;
    align-items: center;
    padding-left: 15px;
    padding-right: 15px;
    box-sizing: border-box;
}

.pay-status {
    width: 170rpx;
    float: right;
    text-align: center;
    color: #666666;
    font-size: 28rpx;
    font-family: SourceHanSansCN-Regular;
    font-weight: bold;
}

.pay-left {
    flex: 1;
    color: #999999;
    font-size: 24rpx;
    font-family: SourceHanSansCN-Regular;
    font-weight: bold;
}

.first {
    float: left;
    width: 150rpx;
    margin: 0 50rpx;
    padding: 30rpx 0;
    text-align: center;
    font-size: 34rpx;
    font-family: SourceHanSansCN-Regular;
    font-weight: bold;
}

.tab-left {
    border-bottom: 2rpx solid #EEEEEE;
    width: 100%;
    box-sizing: border-box;
}

.tab-left.order .active {
    border-color: #00cccc;
    color: #00cccc;
}

.tab-right.order {
    background: #f1f1f1;
    padding-top: 0;
    width: 100%;
    box-sizing: border-box;
}

.tab-right .right-item {
    padding-left: 30rpx;
    padding-right: 30rpx;
    display: none;
}

.tab-right .right-item.active {
    display: block;
}

.img-list-order {
    margin-top: 52rpx;
    box-shadow: 0px 0px 15px 0px rgba(0,0,0,0.2);
    border: 1rpx solid #eee;
    border-radius: 30rpx;
    background: #fff;
}

.pay-images {
    margin-right: 40rpx;
    background-size: 134rpx 134rpx;
    float: left;
    width: 100rpx;
    height: 100rpx;
    display: flex;
    border-radius: 10rpx;
}

.pay-ticket-details {
    flex: 1;
}

.pay-buy-items {
    width: 100%;
    display: flex;
    padding: 30rpx;
    box-sizing: border-box;
}

.ticket-name {
    padding-bottom: 20rpx;
    font-size: 32rpx;
    font-family: SourceHanSansCN-Regular;
    font-weight: bold;
    color: #333;
}

.ticket-name.closed {
    color: #999;
}

.ticket-amount {
    font-size: 26rpx;
    padding-bottom: 20rpx;
    height: 30rpx;
    line-height: 30rpx;
    text-align: right;
}

.ticket-amount .num {
    color: #FF6633;
}

.ticket-btn {
    text-align: right;
}

.ticket-date {
    color: #3399FF;
    font-size: 22rpx;
    padding-bottom: 20rpx;
    display: flex;
    height: 30rpx;
    line-height: 30rpx;
}

.date-bg {
    font-size: 28rpx;
    font-family: SourceHanSansCN-Medium;
    font-weight: 500;
    color: #999999;
    display: inline-flex;
}

.count-left {
    padding-left: 10rpx;
}

.ticket-btn .btn-text {
    display: inline-flex;
    width: 136rpx;
    height: 48rpx;
    border: 1rpx solid #3399FF;
    border-radius: 24rpx;
    align-items: center;
    justify-content: center;
}

.ticket-btn .btn-text.cancel {
    border-color: #999999;
}

.ticket-btn .btn-text:first-child {
    margin-right: 14rpx;
}

.line-btn {
    padding-bottom: 20rpx;
    padding-right: 30rpx;
}

.order-tab .tab {
    margin-top: 0;
}

.list-details-images {
    width: 12rpx;
    height: 21rpx;
    background-size: contain;
    margin-left: 20rpx;
    display: inline-block;
}

.date-bg.date {
    display: inline-block;
    margin-right: 24rpx;
}

.auth-diaolg {
    background: rgba(0,0,0,0.5);
    position: fixed;
    width: 100%;
    top: 0;
    bottom: 0;
    left: 0;
}

.auth-title {
    width: 496rpx;
    height: 226rpx;
    background: #fff;
    box-shadow: 1rpx 0px 8rpx rgba(51,51,51,0.06);
    position: absolute;
    top: 50%;
    left: 50%;
    margin-left: -248rpx;
    margin-top: -113rpx;
    border-radius: 15rpx;
}

.auth-header {
    height: 157rpx;
    line-height: 157rpx;
    width: 100%;
    text-align: center;
}

.auth-btns {
    display: flex;
    margin: 0 80rpx;
    justify-content: space-around;
}

.auth-save {
    width: 116rpx;
    height: 44rpx;
    border: 1px solid #999999;
    border-radius: 5rpx;
    display: inline-flex;
    justify-content: center;
    align-items: center;
}

.order-park .ticket-date,.order-park .ticket-name {
    padding-bottom: 27rpx;
    font-size: 28rpx;
    font-weight: bold;
    color: #333;
    font-family: Noto SansCJK;
}

.order-park .ticket-amount {
    padding-bottom: 0;
    font-size: 26rpx;
    color: #666;
    display: flex;
}

.order-park-detail {
    float: right;
    width: 120rpx;
    color: #3399FF;
    font-size: 26rpx;
    font-weight: bold;
    font-family: Noto SansCJK;
}

.order-park-amount {
    flex: 1;
}

.store-num {
    font-size: 22rpx;
    font-family: SourceHanSansCN-Regular;
    font-weight: bold;
    color: #999;
    height: 30rpx;
    line-height: 30rpx;
    width: 120rpx;
    text-align: left;
}