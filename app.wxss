.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 200rpx 0;
    box-sizing: border-box;
}

page {
    flex: 1;
    display: flex;
    background: #f7f7f7;
    font-size: 24rpx;
    box-sizing: border-box;
}

.model-pay {
    float: right;
    border: 0;
    width: 220rpx;
    text-align: center;
    background: linear-gradient(90deg,rgba(255,153,51,1),rgba(255,110,59,1));
}

.model-service {
    float: left;
    width: 100rpx;
    padding: 0 20rpx;
    padding-top: 10rpx;
    box-sizing: border-box;
    text-align: center;
}

.model-notice {
    padding-bottom: 38rpx;
    padding-top: 32rpx;
    display: flex;
    padding-left: 40rpx;
    padding-right: 40rpx;
}

.model-notice text {
    flex: 1;
    align-items: center;
    justify-content: center;
    text-align: center;
    font-size: 32rpx;
}

.notice-clear {
    width: 32rpx;
    height: 32rpx;
}

.notice-title {
    font-size: 28rpx;
}

.notice-list {
    padding: 20rpx;
    border-bottom: 2rpx solid #EEEEEE;
}

.notice-info {
    flex: 1;
}

.notice-details {
    width: 111rpx;
    font-size: 26rpx;
    text-align: left;
    display: block;
    float: left;
    color: #666;
}

.info-titles {
    display: flex;
}

.info-titles view {
    flex: 1;
}

.model-open {
    background: #fff;
}

.modal-list {
    width: 100%;
    padding: 0;
    margin: 0;
    box-sizing: border-box;
    width: 100%;
}

.icon-clear {
    float: right;
}

.txtys {
    padding-bottom: 20rpx;
}

.txtsure {
    width: 100%;
    height: 98rpx;
    line-height: 98rpx;
    display: flex;
    justify-content: center;
}

.model-pay {
    float: right;
    border: 0;
    width: 220rpx;
    text-align: center;
    background: linear-gradient(90deg,rgba(255,153,51,1),rgba(255,110,59,1));
}

.model-total {
    flex: 1;
    text-align: left;
}

.model-service {
    float: left;
    width: 100rpx;
    padding: 0 20rpx;
    padding-top: 10rpx;
    box-sizing: border-box;
    text-align: center;
}

.model-colors {
    color: #FF9733;
    display: inline-block;
    padding-left: 10rpx;
}

.tab {
    width: 100%;
    display: flex;
    flex-direction: column;
    margin-top: 50rpx;
}

.tab-left,.tab-right {
    width: 100%;
}

.tab-right {
    padding-top: 38rpx;
}

.tab-left {
    border-bottom: 2rpx solid #EEEEEE;
    width: 100%;
    box-sizing: border-box;
}

.tab-left .active {
    border-bottom: 2rpx solid #3399FF;
}

.item-details {
    display: flex;
    margin-bottom: 50rpx;
}

.tricket-details {
    flex: 1;
}